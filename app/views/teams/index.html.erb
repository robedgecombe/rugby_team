          <h2><%=  team.name %></h2>
      </th>

        </div>
   
      <div class="player_names">
          <tr> 
           <td>
     <h4><% @men.each do |guy| %>
          <% if (guy.id - 1) / 15 + 1 == team.id %>
                <% if (guy.id) % 15 == 0 %>
                  <%= '15-' %>
                  <%= guy.name %>  
                <% else %>
                  <%= guy.id % 15 %>-
                 <%= guy.name  %>
               <% end %>                      
                  <br>
            <% end %>               
          <% end %>
             </td> </tr> 
            <br>
        <% end %></h4>
     </div>







